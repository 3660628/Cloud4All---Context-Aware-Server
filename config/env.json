{
    "default": {
        "server": {
            "port":        8888,
            "forks":        1,
            "siteUrl":      "http://localhost:8888",
            "host": "localhost"
        },
        "triggers": {
            "sensor": {
                "triggers": {
                    "onNewData": {
                        "data": "new",
                        "aggregation": "sum",
                        "trigger": "threshold",
                        "threshold": "5",
                        "diffRadius": "10",
                        "triggered": "near",
                        "maxDistance": 1,
                        "isNear": "send",
                        "send": "store",
                        "store": "ack"
                    },
                    "scheduling": {
                        "data": "mean",
                        "time": "60"
                    }
                },
                "receiver": {
                    "host": "localhost",
                    "port": "8889",
                    "path": "/receiver"
                }
            }, 
            "user": {
                "triggers": {
                    "onNewUser": {
                        "trigger": "rightNow",
                        "rightNow": "10" 
                    }
                }
            }
        },
        "client": {
            "url": {"id": "client.url"}
        }
    }, 
    "test": {
        "storeRedis": {
            "host":         "127.0.0.1",
